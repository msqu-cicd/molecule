FROM docker:dind

COPY requirements.in /requirements.in

RUN apk update && \
    apk add --no-cache --virtual .build-deps \
    python3-dev py3-setuptools py3-wheel gcc build-base musl-dev libffi-dev openssl-dev autoconf automake linux-headers && \
    apk add --no-cache python3 py3-pip bash bind-tools curl git make openssh-client podman rsync sshpass sudo yq && \
    pip3 install --no-cache-dir --no-compile pip-tools && pip-compile --unsafe-package packaging /requirements.in && \
    pip3 install --no-cache-dir --no-compile -r requirements.txt && \
    pip3 install --no-cache-dir \
      git+https://github.com/ansible-community/molecule-digitalocean.git \
      git+https://github.com/ansible-community/molecule-ec2.git && \
    pip3 install --no-cache-dir --no-deps \
      git+https://github.com/ansible-community/molecule-hetznercloud && \
    apk del .build-deps && \
    mkdir -p ~/.ansible/plugins/modules && \
    curl -o ~/.ansible/plugins/modules/aur.py https://raw.githubusercontent.com/kewlfft/ansible-aur/master/plugins/modules/aur.py
